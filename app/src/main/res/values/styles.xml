<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat">
        <item name="colorPrimary">@color/hku_primary</item>
        <item name="colorPrimaryDark">@color/hku_primary_dark</item>
        <item name="colorAccent">@color/hku_accent</item>
        <item name="android:textColorPrimary">@color/hku_textTitleColor</item>
        <item name="android:textColor">@color/hku_textBackColor</item>
        <item name="android:icon">@drawable/ic_launcher_actionbar</item>
    </style>


    <style name="NewTheme" parent="Base.Theme.AppCompat">
        <item name="colorPrimary">@color/hku_primary2</item>
        <item name="colorPrimaryDark">@color/hku_primary_dark</item>
        <item name="colorAccent">@color/hku_accent</item>
        <item name="android:textColorPrimary">@color/hku_textTitleColor</item>
        <item name="android:textColor">@color/hku_textBackColor</item>
        <item name="actionBarSize">50dp</item>
    </style>


    <style name="SlidingTabTheme" parent="Base.Theme.AppCompat">
        <item name="android:windowBackground">@color/background_window</item>
        <item name="colorPrimary">@color/hku_primary2</item>
        <item name="colorPrimaryDark">@color/hku_primary_dark</item>
        <item name="colorAccent">@color/hku_accent</item>
        <item name="android:textColorPrimary">@color/hku_Color_White</item>
        <item name="android:textColor">@color/hku_Color_Black</item>
        <item name="actionBarSize">47dp</item>
        <!--<item name="android:actionBarStyle">@style/ActionBarStyle</item>-->
    </style>

    <!-- actionBarStyle 이 적용되지 않는다. java코드로 해결 -->
    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">#FF006666</item>
        <item name="android:icon">@drawable/ic_launcher_actionbar</item>

    </style>


    <style name="SpinnerCheckedSmall">
        <item name="android:checkMark">@drawable/spinner_checkbox</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/hku_Color_White</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">#FFB805</item>
        <item name="fab_colorPressed">#F2AB00</item>
        <item name="fab_colorRipple">#D99200</item>
    </style>

    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#1565C0</item>
        <item name="fab_colorPressed">#2272CD</item>
        <item name="fab_colorRipple">#62B2FF</item>
    </style>

    <style name="MenuButtonsSmall.Green">
        <item name="fab_colorNormal">#43A047</item>
        <item name="fab_colorPressed">#2E7D32</item>
        <item name="fab_colorRipple">#1B5E20</item>
    </style>

    <style name="MenuButtonsSmall.Cyan">
        <item name="fab_colorNormal">#06a6db</item>
        <item name="fab_colorPressed">#ff0697c7</item>
        <item name="fab_colorRipple">#ff057ea7</item>
    </style>

</resources>
