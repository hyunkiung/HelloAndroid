<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.administrator.helloandroid.pkg_adapter.GridView_Calendar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_before_M"
            android:text="이전달"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15dp"
            />

        <TextView
            android:text=""
            android:id="@+id/text_YM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/btn_next_M"
            android:text="다음달"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#111111"
        android:padding="2dp"
        >

        <GridView
            android:id="@+id/grid_Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="7"
            android:verticalSpacing="2dp"
            android:horizontalSpacing="2dp"
            android:stretchMode="columnWidth"
            />

        <GridView
            android:id="@+id/grid_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="7"
            android:verticalSpacing="2dp"
            android:horizontalSpacing="2dp"
            android:stretchMode="columnWidth"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" ></View>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FF00FF">

        <TextView
            android:id="@+id/seld_Text_Num"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="#777777"
            android:padding="5dp"
            android:gravity="center"/>

        <ListView
            android:id="@+id/seld_List_View"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </LinearLayout>

