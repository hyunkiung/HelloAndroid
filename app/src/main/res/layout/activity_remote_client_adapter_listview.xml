<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.helloandroid.pkg_adapter.customBaseAdapter"
    android:orientation="vertical"
    >

    <!--채팅 표현 - 상대방-->
    <LinearLayout
        android:id="@+id/ll_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00000000"
        android:layout_gravity="start"
        android:visibility="visible"
        >

        <ImageView
            android:id="@+id/img_chat_icon"
            android:src="@drawable/ic_android_grey600_18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:padding="5dp"
            android:layout_gravity="center|top"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_chat_nick"
                android:textSize="12dp"
                android:textColor="#ff3c3c3c"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingBottom="2dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_chat_message"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chating_view_you"
                    android:paddingLeft="10dp"
                    android:paddingRight="7dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="62dp"
                    android:layout_marginEnd="62dp"
                    />


                <TextView
                    android:id="@+id/tv_chat_wdt"
                    android:textSize="12sp"
                    android:textColor="#ff4d4d4d"
                    android:background="#00000000"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingLeft="3dp"
                    android:layout_marginLeft="-62dp"
                    android:layout_marginStart="-62dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




    <!--채팅 표현 - 나-->
    <LinearLayout
        android:id="@+id/ll_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#00000000"
        android:layout_gravity="end"
        android:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_gravity="right"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_chat_wdt_me"
                    android:textSize="12sp"
                    android:textColor="#ff4d4d4d"
                    android:background="#00000000"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingRight="3dp"
                    android:layout_marginRight="-62dp"
                    android:layout_marginEnd="-62dp"
                    android:gravity="right"
                    />

                <TextView
                    android:id="@+id/tv_chat_message_me"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chating_view_me"
                    android:paddingLeft="7dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="62dp"
                    android:layout_marginStart="62dp"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!--채팅 표현 - 시스템 -->
    <LinearLayout
        android:id="@+id/ll_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        >

        <TextView
            android:id="@+id/tv_chat_message_sys"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff598486"
            android:padding="3dp"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>
