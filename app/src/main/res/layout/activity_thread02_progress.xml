<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.administrator.helloandroid.pkg_thread.thread02_progress">


    <TextView
        android:text="프로그래스바를 이용한 멀티 스레드 연습하기"
        android:textColor="#000000"
        android:textSize="15dp"
        android:gravity="center"
        android:background="#CCCCCC"
        android:layout_marginRight="3dp"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progress1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal" />

    <TextView
        android:id="@+id/tv_stats1"
        android:text="진행상태 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_start1"
        android:text="5초단위 프로그래스바 시작 extended Thread"
        android:textSize="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <ProgressBar
        android:id="@+id/progress2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal" />

    <TextView
        android:id="@+id/tv_stats2"
        android:text="진행상태 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_start2"
        android:text="1초단위 프로그래스바 시작 implements Runnable"
        android:textSize="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>

    <TextView
        android:text="프로그래스바를 이용한 싱글 스레드 연습하기"
        android:textColor="#000000"
        android:textSize="15dp"
        android:gravity="center"
        android:background="#CCCCCC"
        android:layout_marginRight="3dp"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progress3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal" />

    <TextView
        android:id="@+id/tv_stats3"
        android:text="진행상태 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progress4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal" />

    <TextView
        android:id="@+id/tv_stats4"
        android:text="진행상태 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_start3"
        android:text="싱글 쓰레드 프로그래스바 시작 extended Thread"
        android:textSize="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="싱글스레드는 하나의 스레드에 다중작업을 시켜서 타이밍이 안맞다"
        android:textColor="#000000"
        android:textSize="12dp"
        android:gravity="center"
        android:background="#CCCCCC"
        android:layout_marginRight="3dp"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
