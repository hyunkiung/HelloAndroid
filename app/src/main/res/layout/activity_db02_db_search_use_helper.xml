<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:orientation="vertical"
    tools:context="com.example.administrator.helloandroid.project_team.DB02_DB_SearchUseHelper">

    <TextView
        android:text=""
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#555555"
        android:textSize="12dp"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_db_open"
            android:text="DB_Open"
            android:textSize="12dp"
            android:gravity="center"
            android:background="#111111"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"></View>

        <TextView
            android:id="@+id/tv_db_drop"
            android:text="DB_Drop"
            android:textSize="12dp"
            android:gravity="center"
            android:background="#111111"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"></View>

        <TextView
            android:id="@+id/tv_db_check"
            android:text="DB_ExistentCheck"
            android:textSize="12dp"
            android:gravity="center"
            android:background="#111111"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"></View>

    <TextView
        android:text="데이터 조회 결과 목록 (customer DB의 테이블 내역)"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#dddddd"
        android:textColor="#111111"
        android:textSize="12dp"
        android:gravity="center"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TableRow>

            <ListView
                android:id="@+id/lv_DataList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                ></ListView>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#666666"></View>



            <TableLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:text="테이블 생성"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_span="2"
                        android:textSize="12dp"
                        android:background="#555555"
                        android:gravity="center" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="테이블명 :"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12dp"
                        android:gravity="center"/>

                    <EditText
                        android:text=""
                        android:id="@+id/et_table_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"/>

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#666666"></View>

                <TableRow>

                    <TextView
                        android:text="::필드명::"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="#dddddd"
                        android:textColor="#111111"
                        android:textSize="12dp"
                        android:gravity="center"/>

                    <TextView
                        android:text="::데이터타입::"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="#dddddd"
                        android:textColor="#111111"
                        android:textSize="12dp"
                        android:gravity="center"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="기본키 id"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="#777777"
                        android:textColor="#111111"
                        android:textSize="12dp"
                        android:gravity="center"/>

                    <TextView
                        android:text="intger 자동 생성"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="#777777"
                        android:textColor="#111111"
                        android:textSize="12dp"
                        android:gravity="center"/>

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#666666"></View>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#666666"></View>

                <TableRow android:layout_height="25dp">

                    <EditText
                        android:text=""
                        android:hint="필드명1"
                        android:id="@+id/et_field_name1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="12dp"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/sp_data_type1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="12dp"
                        android:drawSelectorOnTop="true"
                        android:prompt="@string/spinner_table_prompt"
                        android:layoutMode="clipBounds"/>

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#666666"></View>

                <TableRow android:layout_height="25dp">

                    <EditText
                        android:text=""
                        android:hint="필드명2"
                        android:id="@+id/et_field_name2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="12dp"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/sp_data_type2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="12dp"
                        android:drawSelectorOnTop="true"
                        android:prompt="@string/spinner_table_prompt"
                        android:layoutMode="opticalBounds"/>

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#666666"></View>

                <TableRow android:layout_height="25dp">

                    <EditText
                        android:text=""
                        android:hint="필드명3"
                        android:id="@+id/et_field_name3"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="12dp"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/sp_data_type3"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textSize="12dp"
                        android:drawSelectorOnTop="true"
                        android:prompt="@string/spinner_table_prompt"
                        android:layoutMode="opticalBounds"/>

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#666666"></View>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"></View>

                <TableRow>

                    <ImageButton
                        android:id="@+id/btn_table_Create"
                        android:src="@drawable/save1"
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:layout_gravity="center"/>

                </TableRow>


            </TableLayout>

        </TableRow>
    </TableLayout>

</LinearLayout>
