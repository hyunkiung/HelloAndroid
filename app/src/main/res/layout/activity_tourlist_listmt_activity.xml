<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    android:orientation="vertical"
    tools:context="com.example.administrator.helloandroid.project_team.TourList_LISTMT_Activity">

    <!--행1 (id 타이틀1 타이틀2 타이틀3 버튼)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <EditText
            android:id="@+id/et_title1"
            android:text=""
            android:hint="title1 입력"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:singleLine="true"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/border_circle"
            android:paddingLeft="5dp"
            android:maxLength="15"
            android:textCursorDrawable="@null"
            />
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"></View>

        <EditText
            android:id="@+id/et_title2"
            android:text=""
            android:hint="title2 입력"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:singleLine="true"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/border_circle"
            android:paddingLeft="5dp"
            android:maxLength="15"
            android:textCursorDrawable="@null"
            />
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"></View>

        <EditText
            android:id="@+id/et_title3"
            android:text=""
            android:hint="title3 입력"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/border_circle"
            android:paddingLeft="5dp"
            android:maxLength="15"
            android:textCursorDrawable="@null"
            />

    </LinearLayout>




    <!--행2 (컨텐츠)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <EditText
            android:id="@+id/et_contents"
            android:text=""
            android:hint="contents 입력"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/border_circle"
            android:paddingLeft="5dp"
            android:maxLength="100"
            android:textCursorDrawable="@null"
            />

    </LinearLayout>



    <!--행3 (웨더 동반자 대표사진)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <EditText
            android:id="@+id/et_weather"
            android:text=""
            android:hint="weather 입력"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:singleLine="true"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/border_circle"
            android:paddingLeft="5dp"
            android:maxLength="15"
            android:textCursorDrawable="@null"
            />
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"></View>

        <EditText
            android:id="@+id/et_companion"
            android:text=""
            android:hint="동반자 입력"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:singleLine="true"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/border_circle"
            android:paddingLeft="5dp"
            android:maxLength="15"
            android:textCursorDrawable="@null"
            />
        <View
            android:layout_width="30dp"
            android:layout_height="match_parent"></View>

        <EditText
            android:id="@+id/et_pid"
            android:text="0"
            android:hint="pid 숫자 입력"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/border_circle"
            android:paddingLeft="5dp"
            android:maxLength="15"
            android:textCursorDrawable="@null"
            android:layout_weight="1"
            android:inputType="number"
            />
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"></View>

        <Button
            android:id="@+id/btn_pid_save"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/button_circle"
            android:text="대표사진변경"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>



    <!--행4 (방문지 주소)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <EditText
            android:id="@+id/et_location"
            android:text=""
            android:hint="location 입력"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/border_circle"
            android:paddingLeft="5dp"
            android:maxLength="100"
            android:textCursorDrawable="@null"
            />

    </LinearLayout>



    <!--행5 (방문일 등록일 수정일)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_tdt"
            android:text=""
            android:hint="tdt 입력"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:singleLine="true"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/border_circle"
            android:paddingLeft="5dp"
            android:maxLength="15"
            android:textCursorDrawable="@null"
            />
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"></View>

        <EditText
            android:id="@+id/et_wdt"
            android:text=""
            android:hint="wdt 입력"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:singleLine="true"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/border_circle"
            android:paddingLeft="5dp"
            android:maxLength="15"
            android:textCursorDrawable="@null"
            />
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"></View>

        <EditText
            android:id="@+id/et_edt"
            android:text=""
            android:hint="edt 입력"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textColorHint="#555555"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/border_circle"
            android:paddingLeft="5dp"
            android:maxLength="15"
            android:textCursorDrawable="@null"
            android:layout_weight="1"
            />
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"></View>

        <Button
            android:id="@+id/btn_record_save"
            android:layout_width="86dp"
            android:layout_height="30dp"
            android:background="@drawable/button_circle"
            android:text="레코드 추가"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#cccccc"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"></View>

    <ListView
        android:id="@+id/lv_DataList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></ListView>

</LinearLayout>
